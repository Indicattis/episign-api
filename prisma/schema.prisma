generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model Document {
  id       Int     @id @default(autoincrement())
  filename String
  data     Bytes
  status   Boolean
  emp_id   Int

  createdAt DateTime @default(now())

  @@map("docs")
}

model Employee {
  id           Int    @id @default(autoincrement())
  emp_name     String
  emp_register String @unique
  hash         String @unique
  token        String @unique

  @@map("employees")
}
